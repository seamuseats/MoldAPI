generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  discordid String?
  name      String?
  levels    Level[]
  sessions  ApiKey[]
}

model Level {
  id          Int     @id
  title       String
  author      String?
  place       Int     @default(autoincrement())
  completions User[]
  video       String?
}

model ApiKey {
  key    String @id
  user   User?  @relation(fields: [userId], references: [id])
  userId Int?
  expirationDate DateTime?
}
